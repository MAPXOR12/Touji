{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
